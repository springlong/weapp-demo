<!--pages/country/country.wxml-->
<view class="container">
  <view class="list-warp">
    <button class="btn" bindtap="bindViewPage">新开页面访问三级店铺页</button>
    <button class="btn" bindtap="bindRedirectPage">重定向到三级店铺页</button>
    <button class="btn" bindtap="bindBack">返回前页</button>
  </view>
  <view class="section">
    <view class="section-title"> flex-direction: row </view>
    <view class="flex-wrap">
      <view class="flex-item bg-green">1</view>
      <view class="flex-item bg-red">2</view>
      <view class="flex-item bg-blue">3</view>
    </view>
  </view>
  <view class="section section-height">
    <view class="section-title"> flex-direction: column </view>
    <view class="flex-wrap flex-wrap-column">
      <view class="flex-item bg-green">1</view>
      <view class="flex-item bg-red">2</view>
      <view class="flex-item bg-blue">3</view>
    </view>
  </view>
</view>
